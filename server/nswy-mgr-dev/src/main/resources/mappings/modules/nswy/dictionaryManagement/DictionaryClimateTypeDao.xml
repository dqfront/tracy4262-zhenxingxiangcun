<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ovit.manager.modules.nswy.dao.dictionaryManagement.DictionaryClimateTypeDao">

    <select id="findList" parameterType="com.ovit.manager.modules.nswy.entity.dictionaryManagement.DictionaryClimateType"
            resultType="com.ovit.manager.modules.nswy.entity.dictionaryManagement.DictionaryClimateType">
        select
               p.id,
        p.climate_name as name,
        p.parent_id as pid,
        p.level,
        p.value,
        p.remark,
        p.create_time as createTime
        from climate_type p left join climate_type i on p.parent_id = i.id
        where 1=1
        <if test="name!=null and name!=''">
            and p.climate_name like CONCAT('%',#{name},'%')
        </if>
        <if test="id!=null and id!=''">
            and p.id = #{id}
        </if>
        order by p.create_time desc
    </select>

    <insert id="saveClimateType" parameterType="com.ovit.manager.modules.nswy.entity.dictionaryManagement.DictionaryClimateType">
        insert into climate_type(
            id,
            climate_name,
            parent_id,
            level,
            value,
            remark,
            create_time
        )values (
                    #{id},
                    #{name},
                    #{pid},
                    #{level},
                    #{value},
                    #{remark},
                    now()
                );
    </insert>

    <update id="updateClimateType" parameterType="com.ovit.manager.modules.nswy.entity.dictionaryManagement.DictionaryClimateType">
        update climate_type
        set
            climate_name = #{name},
            value = #{value},
            remark = #{remark}

        where id = #{id}
    </update>

    <delete id="deleteClimateType" parameterType="java.lang.String">
        delete from climate_type where id= #{id}
    </delete>

</mapper>